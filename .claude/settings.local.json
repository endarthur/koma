{
  "permissions": {
    "allow": [
      "Bash(mkdir:*)",
      "Bash(tree:*)",
      "Bash(python -m http.server:*)",
      "Bash(echo:*)",
      "Bash(git mv:*)",
      "Bash(cat:*)",
      "Bash(python build-man-pages.py:*)",
      "WebSearch",
      "Bash(bun --version:*)",
      "Bash(test:*)",
      "Bash(bun test:*)",
      "Bash(bun install)",
      "Bash(bun run test:unit:*)",
      "Bash(bun run test:integration:*)",
      "Bash(bunx playwright install:*)",
      "Bash(npm run test:integration:*)",
      "Bash(node --check:*)",
      "Bash(npx web-test-runner:*)",
      "Bash(node_modules.binweb-test-runner --files \"tests/integration/commands/file-reading.test.js\")",
      "Bash(npm test:*)",
      "Bash(test-output.txt)",
      "Bash(node:*)",
      "Bash(git checkout:*)",
      "Bash(wait)",
      "Bash(python generate-fixtures.py:*)",
      "Bash(npm run test:unit:*)",
      "Bash(find:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/claude-deck.js",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/claude-deck.js",
            "timeout": 5
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/claude-deck.js",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
